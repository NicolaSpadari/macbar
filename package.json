{
	"publisher": "nicolaspadari",
	"name": "macbar",
	"displayName": "MacBar",
	"version": "0.0.1",
	"private": true,
	"packageManager": "pnpm@9.5.0",
	"description": "Customize your Macbook touchbar",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/NicolaSpadari/macbar"
	},
	"main": "./dist/index.js",
	"icon": "res/icon.png",
	"files": [
		"dist"
	],
	"engines": {
		"vscode": "^1.91.0",
		"node": "^20.10.0"
	},
	"activationEvents": ["onStartupFinished"],
	"contributes": {
		"commands": [
			{
				"command": "dev",
				"title": "Dev"
			},
			{
				"command": "build",
				"title": "Build"
			}
		],
		"menus": {
			"touchBar": [
				{
					"command": "dev",
					"group": "scripts"
				},
				{
					"command": "build",
					"group": "scripts"
				}
			]
		}
	},
	"scripts": {
		"build": "tsup src/index.ts --external vscode",
		"dev": "nr build --watch",
		"lint": "eslint . --fix",
		"generate": "nr build && nr pack",
		"publish": "vsce publish --no-dependencies",
		"pack": "vsce package --no-dependencies",
		"release": "bumpp && nr publish"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^2.22.2",
		"@types/node": "^20.14.10",
		"@types/vscode": "^1.91.0",
		"@vscode/vsce": "^2.30.0",
		"bumpp": "^9.4.1",
		"eslint": "^9.7.0",
		"tsup": "^8.1.0",
		"typescript": "^5.5.3",
		"vite": "^5.3.3"
	}
}
